<VBox prefHeight="118.0" prefWidth="484.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="90.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="375.0" minWidth="10.0" prefWidth="375.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Serch:" />
            <Label text="Replace:" GridPane.rowIndex="1" />
            <TextField fx:id="inputSearchPattern" GridPane.columnIndex="1" />
            <TextField fx:id="inputReplacement" prefHeight="27.0" prefWidth="306.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <FlowPane prefHeight="18.0" prefWidth="465.0">
         <children>
            <CheckBox fx:id="ctlIgnoreCase" mnemonicParsing="false" text="ignore case" />
            <CheckBox fx:id="ctlRegExp" mnemonicParsing="false" text="regular expressions" />
            <CheckBox fx:id="ctlWrapAround" mnemonicParsing="false" text="wrap around" />
         </children>
      </FlowPane>
      <ButtonBar prefHeight="40.0" prefWidth="424.0">
        <buttons>
          <Button fx:id="btnSearch" defaultButton="true" mnemonicParsing="false" onAction="#search" text="Search" />
